{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style",
        "prettier"
      ],
      "parserOptions": {
        "sourceType": "module"
      },
      "plugins": ["prettier", "jest"],
      "rules": {
        "no-plusplus": "off",
        "no-console": "warn",
        "max-len": [
          "warn", {
            "code": 120
          }
        ],
        "import/prefer-default-export": "off",
        "no-param-reassign": [
          "error", {
            "props": false
          }
        ],
        "prettier/prettier": [
          "error", {
            "endOfLine": "auto",
            "singleQuote": true, 
            "parser": "flow"
          }
        ]
      },
      "overrides": [
        {
          "files": [
            "**/*.test.js",
            "**/*.test.jsx"
          ],
          "env": {
            "jest": true
          }
        }
      ]
}
